@model IEnumerable<Slider>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider List</h4>
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-success" style="color:white;">Create Slider</a>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Slider slider in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/images/@slider.Image" style="width:150px; height:100px  " alt="image" />
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a class="btn btn-warning">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a class="btn btn-danger">
                                            <i class="mdi mdi-delete-variant"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>