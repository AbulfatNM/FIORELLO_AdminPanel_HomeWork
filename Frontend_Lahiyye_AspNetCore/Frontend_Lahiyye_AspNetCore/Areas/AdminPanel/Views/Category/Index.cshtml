@model IEnumerable<Category>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Category</h2>
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-success" style="color:white;">Create Category</a>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        @category.Name
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a  asp-route-id="@category.Id" class="btn btn-warning">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a asp-action="Delet" asp-route-id="@category.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete-variant"></i>
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>